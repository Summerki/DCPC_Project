                                                    Value="{Binding Path=Value, ElementName=vldSetupPressureSlider}"></ZUI:Speedboard>
                                    <Slider x:Name="vldSetupPressureSlider" Width="300" Height="1" Visibility="Hidden" VerticalAlignment="Bottom" IsMoveToPointEnabled="True"
